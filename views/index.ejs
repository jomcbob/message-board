<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/styles/index.css">
</head>

<body>
  <a href="/new" class="link"><button tabindex="-1">New Post</button></a>
  <div class="content">
    <h1>
      <%= title %>
    </h1>

    <ul>
      <% messages.forEach(msg=> { %>
        <a href="/message/<%= msg.id %>">
          <li>
            <strong>User:</strong>
            <%= msg.username %><br>
              <strong>Message:</strong>
              <%= msg.message %><br>
                <strong>Date:</strong>
                <%= msg.created_at.toLocaleString() %>
          </li>
        </a>

        <% }) %>
    </ul>
  </div>
</body>

</html>